mponents: {MessageBubble},\n  data() {\n    return {\n      /*\n       * $pnGetMessage will listen to a channel subscribed to and start to\n       * display messages as soon as they are received.\n      */\n      mesaje: [],\n    }\n  },\n  methods:{\n    display(messag){\n      this.mesaje.push(messag);\n    }\n  },\n  watch: {\n    vueChatMsg: function(){\n      this.$nextTick(scrollBottom);\n    }\n  },\n  mounted() {\n    if(this.$store.getters[\"auth/isDoctor\"]) {\n      this.$root.$on('doctorReceivedMessage',(messag)=>{\n        this.display(messag);\n      })\n    }else{\n      this.$root.$on('patientReceivedMessage',(messag)=>{\n        this.display(messag);\n      })\n    }\n  }\n};\n</script>\n\n<style scoped>\n.chat-log {\n  display: block;\n  height: inherit;\n  width: 100%;\n  padding: 2% 4%;\n  box-sizing: border-box;\n  overflow-y: scroll;\n}\n.chat-log::-webkit-scrollbar {\n  display: none;\n}\n</style>\n"]}]}